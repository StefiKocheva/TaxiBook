@page
@model RegisterModel
@{
    this.Layout = "_AuthenticationLayout";
}

<div id="auth">
    <div class="container">
        <div class="row">
            <div class="col-md-7 col-sm-12 mx-auto">
                <div class="card pt-4">
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <img src="~/images/logo-second-type.png" height="48" class='mb-4'>
                            <h3>Регистрация</h3>
                            <p>Моля попълнете формата, за да се регистрирате в платформата.</p>
                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="firstName" asp-for="Input.FirstName">Първо име</label>
                                        <input type="text" id="firstName" asp-for="Input.FirstName" class="form-control" placeholder="Първо име">
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="lastName" asp-for="Input.LastName">Фамилия</label>
                                        <input type="text" id="lastName" asp-for="Input.LastName" class="form-control" placeholder="Фамилия">
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="email" asp-for="Input.Email">Email</label>
                                        <input type="email" id="email" asp-for="Input.Email" class="form-control" placeholder="Email">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="phoneNumber" asp-for="Input.PhoneNumber">Телефонен номер</label>
                                        <input type="tel" id="phoneNumber" asp-for="Input.PhoneNumber" class="form-control" placeholder="Телефонен номер">
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="password" asp-for="Input.Password">Парола</label>
                                        <input type="password" id="password" asp-for="Input.Password" class="form-control" placeholder="Парола">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="confirmPassword" asp-for="Input.ConfirmPassword">Потвърждаване на парола</label>
                                        <input type="password" id="confirmPassword" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Потвърждаване на парола">
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <label>Профилна снимка</label>
                                        <div class="form-file">
                                            <input asp-for="Input.ProfilePicture" type="file" class="form-file-input" id="profilePicture">
                                            <label class="form-file-label" for="profilePicture">
                                                <span class="form-file-text">Изберете файл...</span>
                                                <span class="form-file-button btn-primary"><i data-feather="upload"></i></span>
                                            </label>
                                            <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class='form-check clearfix my-4'>
                                <div class="float-right">
                                    <a asp-controller="Account" asp-action="Login">Вече имате акаунт? Влезте.</a>
                                </div>
                            </div>
                            <div class="clearfix">
                                <button type="submit" class="btn btn-primary float-right">Регистрирай</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br /><br /><br />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}