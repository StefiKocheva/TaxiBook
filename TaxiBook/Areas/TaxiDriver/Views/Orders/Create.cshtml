@using TaxiBook.Areas.TaxiDriver.ViewModels.Orders
@model CreateOrderViewModel

<div class="page-title">
    <div class="row">
        <div class="col-12">
            <h3>Направи поръчка</h3>
            <p class="text-subtitle text-muted">Тук лесно може да въведете данните на клиента, който е решил да използва услугите на Вашата компания.</p>
        </div>
    </div>
</div>
<div class="mapouter"><div class="gmap_canvas"><iframe width="1400" height="400" id="gmap_canvas" src="https://maps.google.com/maps?q=Pazardzik&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net/blog/divi-discount-code-elegant-themes-coupon/"></a><br><style>.mapouter{position:relative;text-align:right;height:350px;width:1120px;}</style><a href="https://www.embedgooglemap.net">custom google map for website</a><style>.gmap_canvas {overflow:hidden;background:none!important;height:350px;width:1120px;}</style></div></div><br />
<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-content">
                    <div class="card-body">
                        <form class="form" method="post" asp-area="TaxiDriver" asp-controller="Orders" asp-action="Create" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="currentLocation">Начална точка</label>
                                        <div class="position-relative">
                                            <input asp-for="CurrentLocation" type="text" class="form-control" placeholder="Начална точка" id="currentLocation">
                                            <span asp-validation-for="CurrentLocation" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-street-view"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="endLocation">Крайна дестинация</label>
                                        <div class="position-relative">
                                            <input asp-for="EndLocation" type="text" class="form-control" placeholder="Крайна дестинация" id="endLocation">
                                            <span asp-validation-for="EndLocation" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-map-marked-alt"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="currentLocationDetails">Уточнение</label>
                                        <div class="position-relative">
                                            <input asp-for="CurrentLocationDetails" type="text" class="form-control" placeholder="Повече за местоположението на Вашия клиент" id="currentLocationDetails">
                                            <span asp-validation-for="CurrentLocationDetails" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-pen"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="endLocationDetails">Уточнение</label>
                                        <div class="position-relative">
                                            <input asp-for="EndLocationDetails" type="text" class="form-control" placeholder='Повече за крайната дестинация на Вашия клиент' id="endLocationDetails">
                                            <span asp-validation-for="EndLocationDetails" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-pen"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="countOfPassengers">Брой пътуващи</label>
                                        <div class="position-relative">
                                            <input asp-for="CountOfPassengers" type="number" class="form-control" placeholder="Бройка на пътуващи" id="countOfPassengers">
                                            <span asp-validation-for="CountOfPassengers" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-users"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="additionalRequirements">Допълнителни изисквания</label>
                                        <div class="position-relative">
                                            <input asp-for="AdditionalRequirements" type="text" class="form-control" placeholder="Като например помощ с багаж" id="additionalRequirements">
                                            <span asp-validation-for="AdditionalRequirements" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="far fa-handshake"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary mr-1 mb-1">Стартирай</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    window.onbeforeunload = function() {
        return "Are you sure you want to close the window?";
    };
</script>
