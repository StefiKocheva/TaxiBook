@using TaxiBook.Areas.Dispatcher.ViewModels.Orders
@model OrderListingViewModel

<div class="page-title">
    <div class="row">
        <div class="col-12">
            <h3>Отказани поръчки</h3>
            <p class="text-subtitle text-muted">Можете да управлявате отказаните Ви поръчки за деня, като така направата на отчет става далеч по-приятна работа.</p>
        </div>
    </div>
</div>
@if (this.Model.RefusedOrders.Count() > 0)
{
    <section class="section">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">Направена</th>
                            <th class="text-center">Отказана</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in this.Model.RefusedOrders)
                        {
                            <tr>
                                <td>@order.CreatedOn.ToString("dd.MM.yyyy") г.</td>
                                <td>@order.CompletedOn.ToString("dd.MM.yyyy") г.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>   
}
else
{
    <section class="section">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr class="text-center">
                            <th>Време на изпълнение</th>
                            <th>Повече детайли</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <br /><br /><br /><br /><br /><br />
}
