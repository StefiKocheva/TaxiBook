@using TaxiBook.Areas.Manager.ViewModels.Schedule
@model AddEmployeeViewModel

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Добави служител</h3>
            <p class="text-subtitle text-muted">Можете да добавите своя нов таксиметров шофьор тук.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Manager" asp-controller="Schedule" asp-action="Employees">Служители за деня</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Добави служител</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-content">
                    <div class="card-body">
                        <form class="form" method="post" asp-area="Manager" asp-controller="Schedule" asp-action="CreateEmployee" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="from">От</label>
                                        <input type="time" asp-for="@this.Model.From" class="form-control" id="from">
                                        <span asp-validation-for="@this.Model.From" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="till">До</label>
                                        <input type="time" asp-for="@this.Model.Till" class="form-control" id="till">
                                        <span asp-validation-for="@this.Model.Till" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="@this.Model.Name" for="companyName">Услугите на чия компания използвахте?</label>
                                        <fieldset class="form-group">
                                            <select asp-for="@this.Model.Name" class="form-select" id="companyName">
                                                <option selected="true" disabled="disabled">Изберете...</option>  
                                                @foreach (var employee in this.Model.Employees)
                                                {
                                                    <option asp-for="@this.Model.Name" value="@employee.FirstName @employee.LastName">@employee.FirstName @employee.LastName</option>
                                                }
                                            </select>
                                        </fieldset>
                                        <span asp-validation-for="@this.Model.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="@this.Model.Email" for="companyName">Услугите на чия компания използвахте?</label>
                                        <fieldset class="form-group">
                                            <select asp-for="@this.Model.Email" class="form-select" id="companyName">
                                                <option selected="true" disabled="disabled">Изберете...</option>  
                                                @foreach (var employee in this.Model.Employees)
                                                {
                                                    <option asp-for="@this.Model.Email" value="@employee.Email">@employee.Email</option>
                                                }
                                            </select>
                                        </fieldset>
                                        <span asp-validation-for="@this.Model.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <a type="submit" asp-area="Manager" asp-controller="Schedule" asp-action="Employees" class="btn btn-primary mr-1 mb-1">Добави</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
