                        <tr>
                            <td>Стефани Кочева</td>
                            <td>Диспечер</td>
                            <td>06.03.2022 - 10.03.2022</td>
                            <td><button class="btn btn-primary"><i class="fas fa-check"></i></button> <button class="btn btn-outline-primary"><i class="fas fa-times"></i></button></td>
                        </tr>
