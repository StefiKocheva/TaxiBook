<!-- Calendar creation by my imagination -->
@{
    int currentYear = DateTime.UtcNow.Year;
    int currentMonth = DateTime.UtcNow.Month;
    int daysInMonth = DateTime.DaysInMonth(currentYear, currentMonth);

    const int border = 29;
    const int lessThanBorderWeeks = 4;
    const int moreThanBorderWeeks = 5;
}
<div class="card collapse-icon accordion-icon-rotate"><br />
    <div class="card-content">
        <div class="card-header">
            <h4 class="card-title, text-center">Декември</h4>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">Понеделник</th>
                        <th class="text-center">Вторник</th>
                        <th class="text-center">Сряда</th>
                        <th class="text-center">Четвътък</th>
                        <th class="text-center">Петък</th>
                        <th class="text-center">Събота</th>
                        <th class="text-center">Неделя</th>
                    </tr>
                </thead>
                <tbody>
                    @if (daysInMonth < border)
                    {
                        for (var i = 1; i <= lessThanBorderWeeks; i++)
                        {
                            <tr>
                                @if (i == 1)
                                {
                                    @for (var j = 1; j <= 7; j++)
                                    {
                                        <td class="text-center"><a asp-area="Manager" asp-controller="Schedule" asp-action="Employees">@j</a></td>
                                    }
                                }
                                else if (i == 2)
                                {
                                    @for (var j = 8; j <= 14; j++)
                                    {
                                        <td class="text-center"><a asp-area="Manager" asp-controller="Schedule" asp-action="Employees">@j</a></td>
                                    }
                                }
                                else if (i == 3)
                                {
                                    @for (var j = 15; j <= 21; j++)
                                    {
                                        <td class="text-center"><a asp-area="Manager" asp-controller="Schedule" asp-action="Employees">@j</a></td>
                                    }
                                }
                                else if (i == 4)
                                {
                                    @for (var j = 22; j <= 28; j++)
                                    {
                                        <td class="text-center"><a asp-area="Manager" asp-controller="Schedule" asp-action="Employees">@j</a></td>
                                    }
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
