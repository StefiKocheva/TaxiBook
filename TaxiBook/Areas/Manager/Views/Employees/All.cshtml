@using TaxiBook.Areas.Manager.ViewModels.Employees
@model EmployeeListingViewModel

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-12 order-md-1 order-last">
            <h3>Вашите служители</h3>
            <p class="text-subtitle text-muted">Тук можете да управлявате данните на диспечерите и таксимтеровите шофьори.</p>
        </div>
    </div>
</div>
<section class="section">
    <div class="card">
        <div class="card-body">
            <div id="table" class="table-editable">
                <table class='table table-hover'>
                    <thead>
                        <tr align="center">
                            <th>Пълно име</th>
                            <th>Роля</th>
                            <th>Функции</th>
                        </tr>
                    </thead>
                    <tbody align="center">
                        @foreach (var employee in this.Model.Employees)
                        {
                            <tr>
                                <td>@employee.FullName</td>
                                <td>Диспечер</td>
                                <td><a asp-area="Manager" asp-controller="Employees" asp-action="Edit" role="button" class="table-element"><i class="fas fa-user-edit"></i></a><span class="table-element" role="button" value="Delete Row" onclick="DeleteRowFunction(this)"> <i class="far fa-trash-alt"></i></span></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-area="Manager" asp-controller="Employees" asp-action="Create" class="btn btn-primary btn-block">Добави</a>
            </div>
        </div>
    </div>
</section>

