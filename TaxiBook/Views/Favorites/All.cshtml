@using TaxiBook.Services.ViewModels.Favorites
@model CreateFavoriteViewModel
@{
    this.Layout = "_LoggedLayout";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-12 order-md-1 order-last">
            <h3>Любими</h3>
            <p class="text-subtitle text-muted">Тук са всички компании, които сте добавили като любими.</p>
        </div>
    </div>
</div>
<section class="section">
    <div class="card">
        <div class="card-body">
            <table class='table table-hover'>
                <thead>
                    <tr class="text-center">
                        <th>Компания</th>
                        <th>Цена за километър</th>
                        @*<th>Област</th>*@
                        <th>Обади се сега</th>
                        <th>Функции</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center">
                        <td><a>Иванина Такси</a></td>
                        <td>1.18 лв.</td>
                        <td><a href="tel:+359 2 091 3254">+359 2 091 3254</a></td>
                        <td><a asp-area="default" asp-controller="Order" asp-action="Details"><i class="fas fa-plus"></i></a> <span class="table-element" role="button" value="Delete Row" onclick="DeleteRowFunction(this)"><i class="far fa-trash-alt"></i></span></td>
                    </tr>
                    <tr class="text-center">
                        <td><a>Елит Такси</a></td>
                        <td>1.20 лв.</td>
                        <td><a href="tel:089 706 5688">+359 2 285 6380</a></td>
                        <td><a asp-area="default" asp-controller="Order" asp-action="Details"><i class="fas fa-plus"></i></a> <span class="table-element" role="button" value="Delete Row" onclick="DeleteRowFunction(this)"><i class="far fa-trash-alt"></i></span></td>
                    </tr>
                </tbody>
            </table>
            <button type="submit" data-toggle="modal" data-target="#exampleModalCenter" class="btn btn-primary btn-block">Добави</button>
            <br /><br />
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-centered modal-dialog-scrollable" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Добави към любими</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <i data-feather="x"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Моля изберете своята любима компания от падащото меню.</p>
                            <form method="post" asp-area="default" asp-controller="Favorites" asp-action="Create" enctype="multipart/form-data"><div class="col-12">
                                <fieldset class="form-group">
                                    <label for="companyName">Име на компания</label>
                                    <select asp-for="CompanyName" class="form-select" id="companyName">
                                        <option>Избери компания</option>
                                        <option>Евролийз Такси</option>
                                        <option>Рефлекс Плюс</option>
                                    </select>
                                </fieldset>
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </form>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                                <i class="bx bx-x d-block d-sm-none"></i>
                                <span class="d-none d-sm-block">Затвори</span>
                            </button>
                            <a class="btn btn-primary" type="button" asp-area="Default" asp-controller="Favorites" asp-action="All">Добави</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

