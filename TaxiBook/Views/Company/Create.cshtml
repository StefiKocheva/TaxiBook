@using TaxiBook.Services.ViewModels.Companies
@model CreateCompanyViewModel
@{
    this.Layout = "_AuthenticationLayout";
}

<div id="auth">
    <div class="container">
        <div class="row">
            <div class="col-md-7 col-sm-12 mx-auto">
                <div class="card pt-4">
                    <div class="card-body"><br />
                        <div class="text-center mb-5">
                            <img src="~/images/logo-second-type.png" height="48" class='mb-4'>
                            <h3>Добавяне на компания</h3>
                            <p>Моля попълнете формата, за да продължите напред.</p>
                        </div>
                        <form method="post" asp-area="default" asp-controller="Company" asp-action="Create" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative has-icon-left">
                                        <label for="companyName">Име</label>
                                        <div class="position-relative">
                                            <input asp-for="Name" type="text" class="form-control" id="companyName" placeholder="Име на компанията">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-pen"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative has-icon-left">
                                        <label for="address">Адрес</label>
                                        <div class="position-relative">
                                            <input asp-for="Address" type="text" class="form-control" id="address" placeholder="Адрес">
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative has-icon-left">
                                        <label for="dailyTariff">Дневна тарифа</label>
                                        <div class="position-relative">
                                            <input asp-for="DailyТariff" type="number" step="0.01" class="form-control" placeholder="0.00" id="dailyTariff">
                                            <span asp-validation-for="DailyТariff" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-sun"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative has-icon-left">
                                        <label for="nightTariff">Нощна тарифа</label>
                                        <div class="position-relative">
                                            <input asp-for="NightТariff" type="number" step="0.01" class="form-control" placeholder="0.00" id="nightTariff">
                                            <span asp-validation-for="NightТariff" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-moon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative has-icon-left">
                                        <label for="phoneNumber">Телефонен номер</label>
                                        <div class="position-relative">
                                            <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Телефонен номер" id="phoneNumber">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                            <div class="form-control-icon">
                                                <i class="fas fa-phone-alt"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label>Лиценз на компанията</label>
                                        <div class="form-file">
                                            <input asp-for="License" type="file" class="form-file-input" id="license">
                                            <label class="form-file-label" for="license">
                                                <span class="form-file-text">Изберете файл...</span>
                                                <span class="form-file-button btn-primary"><i data-feather="upload"></i></span>
                                            </label>
                                            <span asp-validation-for="License" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 d-flex justify-content-end">
                                <a href="javascript:window.history.back()" class="btn btn-light-secondary mr-1 mb-1">Назад</a>
                                <a asp-area="Manager" asp-controller="Home" asp-action="Index" type="submit" class="btn btn-primary mr-1 mb-1">Добави</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
