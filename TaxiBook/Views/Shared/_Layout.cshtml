<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>TaxiBook</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    
    <!-- Vendor CSS -->
    <link href="~/vendors/landing-page-vendors/aos/aos.css" rel="stylesheet">
    <link href="~/vendors/landing-page-vendors/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendors/landing-page-vendors/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendors/landing-page-vendors/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendors/landing-page-vendors/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/vendors/landing-page-vendors/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/vendors/landing-page-vendors/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center justify-content-between">
            <div class="logo">
                <h1><a href="index.html"><span>TaxiBook</span></a></h1>
            </div>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="#hero">Home</a></li>
                    <li><a class="nav-link scrollto" href="#about">About</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="" asp-action="">Get started</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        </div>
    </header> <!-- End Header -->

    @this.RenderBody()

    <!-- Footer -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="social-links mt-3">
                        <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                        <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer> <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <div id="preloader"></div>

    <!-- Vendor JS -->
    <script src="~/vendors/landing-page-vendors/aos/aos.js"></script>
    <script src="~/vendors/landing-page-vendors/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendors/landing-page-vendors/glightbox/js/glightbox.min.js"></script>
    <script src="~/vendors/landing-page-vendors/purecounter/purecounter.js"></script>
    <script src="~/vendors/landing-page-vendors/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/js/mainLandingPage.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>