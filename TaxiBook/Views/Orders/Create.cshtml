@using TaxiBook.Services.ViewModels.Orders
@model CreateOrderViewModel
@{
    this.Layout = "_LoggedLayout";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Поръчка</h3>
            <p class="text-subtitle text-muted">Моля попълнете формата, за да поръчате своето такси.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="Companies" asp-action="Details">Повече за компанията</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Създаване на поръчка</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="map-responsive">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d2956.173642003534!2d24.332994640815865!3d42.189354637596956!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sbg!4v1647159005753!5m2!1sen!2sbg" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
</div>
<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-content">
                    <div class="card-body">
                        <form method="post" asp-area="Default" asp-controller="Orders" asp-action="Create">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="currentLocation">Текущо местоположение</label>
                                        <div class="position-relative">
                                            <input asp-for="CurrentLocation" type="text" class="form-control" placeholder="Текущо местоположение" id="currentLocation">
                                            <div class="form-control-icon">
                                                <i class="fas fa-street-view"></i>
                                            </div>
                                        </div>                  
                                        <span asp-validation-for="CurrentLocation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative">
                                        <label asp-for="CurrentLocationDetails" for="currentLocationDetails">Уточнение за текущо местоположение</label>
                                        <textarea asp-for="CurrentLocationDetails" id="currentLocationDetails" class="form-control" rows="2" placeholder="Уточнение за текущо местоположение"></textarea>              
                                        <span asp-validation-for="CurrentLocationDetails" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label asp-for="EndLocation" for="endLocation">Крайна дестинация</label>
                                        <div class="position-relative">
                                            <input asp-for="EndLocation"  type="text" class="form-control" placeholder="Крайна дестинация" id="endLocation">
                                            <div class="form-control-icon">
                                                <i class="fas fa-map-marked-alt"></i>
                                            </div>
                                        </div>
                                        <span asp-validation-for="EndLocation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative">
                                        <label asp-for="EndLocationDetails" for="endLocationDetails">Уточнение за крайна дестинация</label>
                                        <textarea asp-for="EndLocationDetails" id="endLocationDetails" class="form-control" rows="2" placeholder="Уточнение за крайна дестинация"></textarea>             
                                        <span asp-validation-for="EndLocationDetails" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label asp-for="CountOfPassengers" for="countOfPassengers">Брой пътуващи</label>
                                        <div class="position-relative">
                                            <input min="1" max="6" asp-for="CountOfPassengers" type="number" min="1" max="6" class="form-control" placeholder="Бройка на пътуващи" id="countOfPassengers">    
                                            <div class="form-control-icon">
                                                <i class="fas fa-users"></i>
                                            </div>
                                        </div>
                                        <span asp-validation-for="CountOfPassengers" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative">
                                        <label asp-for="AdditionalRequirements" for="additionalRequirements">Допълнителни изисквания</label>
                                        <textarea asp-for="AdditionalRequirements" id="additionalRequirements" class="form-control" rows="2" placeholder="Допълнителни изисквания, като например - помощ с багаж"></textarea>             
                                        <span asp-validation-for="AdditionalRequirements" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary mr-1 mb-1">Поръчай</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    window.onbeforeunload = function() {
        return "Are you sure you want to close the window?";
    };
</script>
