@using TaxiBook.Services.ViewModels.Orders
@model CreateOrderViewModel
@{
    this.Layout = "_LoggedLayout";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Поръчка</h3>
            <p class="text-subtitle text-muted">Моля попълнете формата, за да поръчате своето такси.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class='breadcrumb-header'>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Orders" asp-action="Details">Таксита около мен</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Моят избор</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="mapouter">
    <div class="gmap_canvas">
        <iframe class="card-img-top img-fluid" alt="singleminded" id="gmap_canvas" src="https://maps.google.com/maps?q=Sofia&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
        <a href="https://123movies-to.org"></a><br />
    </div>
</div>
<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-content">
                    <div class="card-body">
                        <form method="post" asp-area="Default" asp-controller="Orders" asp-action="Create">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="currentLocation">Текущо местоположение</label>
                                        <div class="position-relative">
                                            <input asp-for="CurrentLocation" type="text" class="form-control" placeholder="Текущо местоположение" id="currentLocation">
                                            <div class="form-control-icon">
                                                <i class="fas fa-street-view"></i>
                                            </div>
                                        </div>                  
                                        <span asp-validation-for="CurrentLocation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative">
                                        <label asp-for="CurrentLocationDetails" for="currentLocationDetails">Уточнение за начална точка</label>
                                        <textarea asp-for="CurrentLocationDetails" id="currentLocationDetails" class="form-control" rows="2" placeholder="Уточнение за начална точка"></textarea>              
                                        <span asp-validation-for="CurrentLocationDetails" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label asp-for="EndLocation" for="endLocation">Крайна дестинация</label>
                                        <div class="position-relative">
                                            <input asp-for="EndLocation"  type="text" class="form-control" placeholder="Крайна дестинация" id="endLocation">
                                            <div class="form-control-icon">
                                                <i class="fas fa-map-marked-alt"></i>
                                            </div>
                                        </div>
                                        <span asp-validation-for="EndLocation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group position-relative">
                                        <label asp-for="EndLocationDetails" for="endLocationDetails">Уточнение за крайна точка</label>
                                        <textarea asp-for="EndLocationDetails" id="endLocationDetails" class="form-control" rows="2" placeholder="Уточнение за крайна точка"></textarea>             
                                        <span asp-validation-for="EndLocationDetails" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label asp-for="CountOfPassengers" for="countOfPassengers">Бройка на пътуващи</label>
                                        <div class="position-relative">
                                            <input asp-for="CountOfPassengers" type="number" min="1" max="6" class="form-control" placeholder="Бройка на пътуващи" id="countOfPassengers">    
                                            <div class="form-control-icon">
                                                <i class="fas fa-users"></i>
                                            </div>
                                        </div>
                                        <span asp-validation-for="CountOfPassengers" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label asp-for="AdditionalRequirements" for="additionalRequirements">Допълнителни изисквания</label>
                                        <div class="position-relative">
                                            <input asp-for="AdditionalRequirements" type="text" class="form-control" placeholder="Като например: помощ с багаж" id="additionalRequirements">
                                            <div class="form-control-icon">
                                                <i class="far fa-handshake"></i>
                                            </div>
                                        </div>
                                        <span asp-validation-for="CurrentLocation" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary mr-1 mb-1">Поръчай</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    window.onbeforeunload = function() {
        return "Are you sure you want to close the window?";
    };
</script>
