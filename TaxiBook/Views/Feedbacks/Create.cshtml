 @using TaxiBook.Services.ViewModels.Feedbacks
 @using TaxiBook.Services.ViewModels.Companies
 @model CreateFeedbackViewModel
@{
    this.Layout = "_LoggedLayout";
}

<div class="page-title">
    <div class="row">
        <div class="col-12">
            <h3>Оцени пътуване</h3>
            <p class="text-subtitle text-muted">Моля попълнете формата, за да дадете своята оценка.</p>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-content">
        <div class="card-body">
            <form method="post" asp-area="Home" asp-controller="Feedbacks" asp-action="Create">
                <div>
                    <div class="col-md-4 mb-4">
                        <div class="form-group form-label-group">
                            <label asp-for="Company" for="companyName">Услугите на чия компания използвахте?</label>
                            <fieldset class="form-group">
                                <select class="form-select" id="companyName">
                                    <option selected="true" disabled="disabled">Изберете...</option>  
                                    <option value="България Такси">България Такси</option>
                                    <option value="Диамант Такси">Диамант Такси</option>
                                </select>
                            </fieldset>
                            <span asp-validation-for="Company" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group form-label-group">
                        <label for="label-textarea">Как бихте оценили своето пътуване?</label>
                    </div>
                    <ul class="list-unstyled mb-0">
                        <li class="d-inline-block me-2 mb-1" >
                            <div class='form-check'>
                                <div class="checkbox">
                                    <input asp-for="IsLiked" type="checkbox" class="form-check-input" name="check" onclick="onlyOne(this)">
                                    <label asp-for="IsLiked"><i data-feather="thumbs-up"></i></label>
                                    <span asp-validation-for="IsLiked" class="text-danger"></span>
                                </div>
                            </div>
                        </li>
                        <li class="d-inline-block me-2 mb-1" style="margin-left: 17em;">
                            <div class='form-check'>
                                <div class="checkbox">
                                    <input asp-for="IsLiked" type="checkbox" class="form-check-input" name="check" onclick="onlyOne(this)">
                                    <label asp-for="IsLiked"><i data-feather="thumbs-down"></i></label>
                                    <span asp-validation-for="IsLiked" class="text-danger"></span>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div><br />
                <div class="form-body">
                    <div class="form-group form-label-group">
                        <label asp-for="Opinion" for="description">Има ли нещо друго, което искате да споделите?</label>
                        <textarea asp-for="Opinion" class="form-control" rows="4" placeholder="Напишете тук" id="description"></textarea>
                    </div>
                </div>
                <div class="form-actions d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-1">Изпрати</button>
                </div>
            </form>
        </div>
    </div>
</div>
